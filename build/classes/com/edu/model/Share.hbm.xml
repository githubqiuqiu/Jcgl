<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    	<class name="com.edu.model.Share" table="share">
    		<id name="shareid">
    			<generator class="native"></generator>
    		</id>
    		<property name="sharetitle"></property>
    		<property name="sharephoto"></property>
    		<property name="sharecontent"></property>
    		<property name="sharepicture"></property>
    	</class>
    </hibernate-mapping>